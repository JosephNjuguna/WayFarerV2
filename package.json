{
  "name": "wayfarer",
  "version": "1.0.0",
  "description": "Way farer is a web app bus booking platform.",
  "main": "app.js",
  "scripts": {
    "start": "NODE_ENV=dev nodemon server.js --exec babel-node --",
    "test": "NODE_ENV=test nyc mocha --require babel-register ./server/test/*.js  --timeout 150000 --exit",
    "coverage": "npm test && nyc report --reporter=text-lcov  | coveralls",
    "lint": "node_modules/.bin/eslint ./ --fix"
  },
  "keywords": [
    "node",
    "js"
  ],
  "author": "Joseph Njuguna",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.4",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-plugin-import": "^2.18.0",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^14.1.1"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "@hapi/joi-date": "^1.3.0",
    "bcrypt": "^3.0.6",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.3",
    "jsonwebtoken": "^8.5.1",
    "nodemon": "^1.19.1",
    "pg": "^7.12.0",
    "request": "^2.88.0",
    "swagger-ui-express": "^4.0.7"
  },
  "nyc": {
    "exclude": [
      "**/*.test.js",
      "build"
    ]
  }
}
